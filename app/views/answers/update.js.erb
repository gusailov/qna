$('div#answer-errors-<%= @answer.id %>').html('<%= render 'shared/errors', resource: @answer %>');

<% unless @answer.errors.present? %>
  $('#answer-body-<%= @answer.id %>').html('<%= j @answer.body %>');
  $('#answer-<%= @answer.id %>-files').html('<%= render 'shared/files', resource: @answer %>');
  $('#answer-<%= @answer.id %>-links').html('<%= render 'shared/links', resource: @answer %>');
<% end %>
